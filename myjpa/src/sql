CREATE TABLE horizonte.musiker(
  MUSIKERID BIGINT PRIMARY KEY NOT NULL,
  NAME VARCHAR(128) NOT NULL,
  VORNAME VARCHAR(128) NOT NULL,
  STRASSE VARCHAR(512) NOT NULL,
  PLZ VARCHAR(32) NOT NULL,
  ORT VARCHAR(128) NOT NULL,
  EMAIL VARCHAR(256),
  TEL VARCHAR(64),
  USERNAME VARCHAR(32) NOT NULL,
  PASSWORD VARCHAR(32) NOT NULL );

CREATE TABLE horizonte.comment(
  COMMENTID BIGINT PRIMARY KEY NOT NULL,
  DATUM VARCHAR(64) NOT NULL,
  USERNAME VARCHAR(32) NOT NULL,
  SONGID BIGINT NOT NULL,
  AUFTRAGID BIGINT NOT NULL,
  TEXTSTR VARCHAR(32) NOT NULL );

CREATE TABLE horizonte.programprobe(
  PROGPROBEID BIGINT PRIMARY KEY NOT NULL,
  SONGID BIGINT NOT NULL,
  PROBEID BIGINT NOT NULL );

CREATE TABLE horizonte.probe(
  PROBEID BIGINT PRIMARY KEY NOT NULL,
  DATUM VARCHAR(64) NOT NULL,
  ORT VARCHAR(128) NOT NULL,
  DESCRIPTION VARCHAR(512) );

CREATE TABLE horizonte.program(
  PROGID BIGINT PRIMARY KEY NOT NULL,
  AUFTRID BIGINT NOT NULL,
  SONGID BIGINT NOT NULL );
  
CREATE TABLE horizonte.auftritt(
  AUFTRID BIGINT PRIMARY KEY NOT NULL,
  DATUM VARCHAR(64) NOT NULL,
  ORT VARCHAR(128) NOT NULL,
  DESCRIPTION VARCHAR(512) NOT NULL,
  NOTES VARCHAR(512) NOT NULL,
  FILENAME VARCHAR(512) );

CREATE TABLE horizonte.song(
  SONGID BIGINT PRIMARY KEY NOT NULL,
  TITLE VARCHAR(128) NOT NULL,
  ORDERNMB INT NOT NULL,
  NOTES VARCHAR(512) NOT NULL,
  DESCRIPTION VARCHAR(512) NOT NULL,
  FILENAME VARCHAR(512),
  CATEGORY VARCHAR(512),
SUBCATEGORY VARCHAR(512) ); 